<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Backend Menu and Action -->
    <record id="action_my_owl_page" model="ir.actions.client">
        <field name="name">My Owl Page</field>
        <field name="tag">my_custom_module.my_owl_page_action</field>
    </record>

    <menuitem id="menu_my_owl_root" name="Owl Examples" sequence="100"/>
    <menuitem id="menu_my_owl_page" name="My Custom Owl Page" parent="menu_my_owl_root" action="action_my_owl_page" sequence="10"/>

    <!-- Frontend Website Page -->
    <template id="my_owl_frontend_template" name="My Owl Frontend Page">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure">
                <div class="container-fluid o_website_wrapper">
                    <div class="row">
                        <div class="col-12">
                            <div id="my_owl_app_container" 
                                t-att-data-user-name="user_name"
                                t-att-data-company="company_name"
                                t-att-data-items="items_json"
                                t-att-data-stats="stats_json"
                                t-att-data-notifications="notifications_json">
                                <!-- Owl app will be mounted here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
